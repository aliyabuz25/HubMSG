    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Tab switching logic
            const tabs = document.querySelectorAll('.tab-btn');
            const mockup = document.getElementById('feature-mockup');
            const section = document.getElementById('features-section');

            tabs.forEach(tab => {
                tab.addEventListener('click', () => {
                    tabs.forEach(t => {
                        t.classList.remove('active', 'bg-accent', 'text-primary');
                        t.classList.add('text-primary/70');
                    });
                    tab.classList.add('active', 'bg-accent', 'text-primary');
                    tab.classList.remove('text-primary/70');

                    const newColor = tab.getAttribute('data-color');
                    if (section) section.style.backgroundColor = newColor;

                    const newImg = tab.getAttribute('data-image');
                    if (mockup) {
                        mockup.style.opacity = '0';
                        mockup.style.transform = 'translateY(10px)';
                        setTimeout(() => {
                            mockup.src = newImg;
                            mockup.style.opacity = '1';
                            mockup.style.transform = 'translateY(0)';
                        }, 300);
                    }
                });
            });

            // Reveal on scroll logic
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('active');
                    }
                });
            }, observerOptions);

            document.querySelectorAll('.reveal').forEach(el => observer.observe(el));

            // Language Modal Logic
            const langSelector = document.getElementById('lang-selector');
            const langModal = document.getElementById('lang-modal');
            const closeModal = document.getElementById('close-modal');

            if (langSelector && langModal && closeModal) {
                langSelector.addEventListener('click', () => {
                    langModal.classList.remove('hidden');
                    langModal.classList.add('flex');
                    setTimeout(() => {
                        langModal.classList.add('opacity-100');
                        langModal.querySelector('div').classList.add('scale-100');
                    }, 10);
                });

                const hideModal = () => {
                    langModal.classList.remove('opacity-100');
                    langModal.querySelector('div').classList.remove('scale-100');
                    setTimeout(() => {
                        langModal.classList.add('hidden');
                        langModal.classList.remove('flex');
                    }, 300);
                };

                closeModal.addEventListener('click', hideModal);
                langModal.addEventListener('click', (e) => {
                    if (e.target === langModal) hideModal();
                });

                document.querySelectorAll('.lang-btn').forEach(btn => {
                    btn.addEventListener('click', () => {
                        const lang = btn.getAttribute('data-lang');
                        translatePage(lang);
                        hideModal();
                    });
                });
            }

            // Support Widget Logic
            const supportBtn = document.getElementById('support-btn');
            const supportModal = document.getElementById('support-modal');
            const closeSupport = document.getElementById('close-support');

            if (supportBtn && supportModal) {
                const hideSupport = () => {
                    supportModal.classList.add('opacity-0', 'translate-y-10', 'scale-95');
                    supportModal.classList.remove('opacity-100', 'translate-y-0', 'scale-100');
                    setTimeout(() => {
                        supportModal.classList.add('hidden');
                    }, 300);
                };

                supportBtn.addEventListener('click', () => {
                    const isHidden = supportModal.classList.contains('hidden');
                    if (isHidden) {
                        supportModal.classList.remove('hidden');
                        setTimeout(() => {
                            supportModal.classList.add('opacity-100', 'translate-y-0', 'scale-100');
                            supportModal.classList.remove('opacity-0', 'translate-y-10', 'scale-95');
                        }, 10);
                    } else {
                        hideSupport();
                    }
                });

                if (closeSupport) closeSupport.addEventListener('click', hideSupport);

                // Form Submission Logic
                const supportForm = document.getElementById('support-form');
                const sendBtn = document.getElementById('send-support');
                const planeIcon = document.getElementById('plane-icon');
                const successMessage = document.getElementById('success-message');

                if (supportForm && sendBtn && planeIcon && successMessage) {
                    sendBtn.addEventListener('click', async (e) => {
                        e.preventDefault();

                        // Rate limiting: 1 submission per day
                        const lastSub = localStorage.getItem('last_support_submission');
                        const today = new Date().toISOString().split('T')[0];
                        if (lastSub === today) {
                            alert('Gündə yalnız bir dəstək sorğusu göndərə bilərsiniz.');
                            return;
                        }

                        // Collect data
                        const firstName = document.getElementById('first-name').value;
                        const lastName = document.getElementById('last-name').value;
                        const category = document.getElementById('category').value;
                        const phone = document.getElementById('phone').value;
                        const message = document.getElementById('message').value;

                        if (!firstName || !lastName || !phone || !message) {
                            alert('Zəhmət olmasa bütün xanaları doldurun.');
                            return;
                        }

                        // Start animation
                        planeIcon.classList.add('animate-plane');
                        sendBtn.disabled = true;
                        sendBtn.innerHTML = 'Göndərilir...';

                        try {
                            const formattedMessage = `Dəstək İstəyi:\nAd: ${firstName} ${lastName}\nKateqoriya: ${category}\nTelefon: ${phone}\nMesaj: ${message}`;

                            const recipients = ['994508300030', '905464233871'];

                            // Check for local file execution (CORS prevention)
                            if (window.location.protocol === 'file:') {
                                alert('Diqqət: Saytı birbaşa fayl olaraq (file://) açdığınız üçün brauzer təhlükəsizlik səbəbiylə API sorğularını bloklaya bilər. Zəhmət olmasa "Live Server" və ya oxşar bir server üzərindən işlədin.');
                            }

                            const requests = recipients.map(target =>
                                fetch('https://hubmsgpanel.octotech.az/api/message', {
                                    method: 'POST',
                                    mode: 'cors',
                                    headers: {
                                        'Content-Type': 'text/plain',
                                        'x-api-key': 'API-KEY-XXXX'
                                    },
                                    body: JSON.stringify({
                                        recipient: target,
                                        message: formattedMessage
                                    })
                                })
                            );

                            const results = await Promise.all(requests);
                            const successes = results.filter(res => res.ok);

                            if (successes.length > 0) {
                                // Success flow (even if one succeeds)
                                localStorage.setItem('last_support_submission', today);
                                supportForm.classList.add('hidden');
                                successMessage.classList.remove('hidden');
                                successMessage.classList.add('flex');

                                setTimeout(() => {
                                    hideSupport();
                                    setTimeout(() => {
                                        supportForm.classList.remove('hidden');
                                        successMessage.classList.add('hidden');
                                        successMessage.classList.remove('flex');
                                        sendBtn.disabled = false;
                                        sendBtn.innerHTML = 'Gönder';
                                        planeIcon.classList.remove('animate-plane');
                                        supportForm.reset();
                                    }, 500);
                                }, 3000);
                            } else {
                                throw new Error('API Error');
                            }
                        } catch (error) {
                            console.error('Submission failed:', error);
                            alert('Xəta baş verdi. Zəhmət olmasa daha sonra təkrar yoxlayın.');
                            sendBtn.disabled = false;
                            sendBtn.innerHTML = 'Gönder';
                            planeIcon.classList.remove('animate-plane');
                        }
                    });
                }
            }

            // Pricing Toggle Logic
            const pricingToggle = document.getElementById('pricing-toggle');
            const toggleCircle = document.getElementById('toggle-circle');
            const monthlyLabel = document.getElementById('monthly-label');
            const yearlyLabel = document.getElementById('yearly-label');
            const priceElements = document.querySelectorAll('.plan-price');

            if (pricingToggle && toggleCircle) {
                let isYearly = false;

                pricingToggle.addEventListener('click', () => {
                    isYearly = !isYearly;

                    // Toggle UI
                    if (isYearly) {
                        toggleCircle.style.transform = 'translateX(28px)';
                        monthlyLabel.classList.replace('text-primary', 'text-primary/40');
                        yearlyLabel.classList.replace('text-primary/40', 'text-primary');
                    } else {
                        toggleCircle.style.transform = 'translateX(0)';
                        monthlyLabel.classList.replace('text-primary/40', 'text-primary');
                        yearlyLabel.classList.replace('text-primary', 'text-primary/40');
                    }

                    // Update Prices
                    priceElements.forEach(el => {
                        const newPrice = isYearly ? el.getAttribute('data-yearly') : el.getAttribute('data-monthly');
                        // Animate price change
                        el.style.opacity = '0';
                        setTimeout(() => {
                            el.innerText = newPrice;
                            el.style.opacity = '1';
                        }, 150);
                    });
                });
            }

            // --- Dynamic Translation Logic (Keyless) ---
            async function translatePage(targetLang) {
                if (window.location.protocol === 'file:') {
                    alert('Çeviri xidməti (Google Translate) fayl protokolunda (file://) bəzən bloklana bilər. Ən yaxşı nəticə üçün saytı bir server üzərindən açın.');
                }

                const loader = document.createElement('div');
                loader.id = 'translation-loader';
                loader.className = 'fixed inset-0 z-[5000] bg-primary/40 backdrop-blur-md flex items-center justify-center text-white';
                loader.innerHTML = '<div class="flex flex-col items-center gap-4"><i class="fa-solid fa-spinner animate-spin text-4xl text-accent"></i><p class="font-bold tracking-widest uppercase text-sm">Tərcümə edilir...</p></div>';
                document.body.appendChild(loader);

                try {
                    const textNodes = [];
                    const walk = document.createTreeWalker(document.body, NodeFilter.SHOW_TEXT, {
                        acceptNode: (node) => {
                            const parent = node.parentElement;
                            if (!parent) return NodeFilter.FILTER_REJECT;
                            const tag = parent.tagName.toLowerCase();
                            if (['script', 'style', 'i', 'code'].includes(tag)) return NodeFilter.FILTER_REJECT;
                            if (parent.closest('#lang-modal') || parent.closest('#translation-loader') || parent.closest('.logo') || parent.closest('.fa-brands')) return NodeFilter.FILTER_REJECT;
                            if (node.textContent.trim().length < 2) return NodeFilter.FILTER_REJECT;
                            return NodeFilter.FILTER_ACCEPT;
                        }
                    });

                    let node;
                    while (node = walk.nextNode()) {
                        textNodes.push(node);
                    }

                    const batchSize = 25;
                    for (let i = 0; i < textNodes.length; i += batchSize) {
                        const batch = textNodes.slice(i, i + batchSize);
                        const joinedText = batch.map(n => n.textContent.trim().replace(/\n/g, ' ')).join('\n');

                        const url = `https://translate.googleapis.com/translate_a/single?client=gtx&sl=auto&tl=${targetLang}&dt=t&q=${encodeURIComponent(joinedText)}`;

                        try {
                            const response = await fetch(url);
                            const data = await response.json();

                            if (data && data[0]) {
                                let translatedFull = "";
                                data[0].forEach(segment => {
                                    if (segment[0]) translatedFull += segment[0];
                                });

                                const translatedLines = translatedFull.split('\n');
                                batch.forEach((node, idx) => {
                                    if (translatedLines[idx] && translatedLines[idx].trim()) {
                                        node.textContent = translatedLines[idx].trim();
                                    }
                                });
                            }
                        } catch (e) {
                            console.error('Batch translation error:', e);
                        }
                    }
                } catch (error) {
                    console.error('General translation error:', error);
                } finally {
                    document.getElementById('translation-loader')?.remove();
                }
            }

            // API Test Logic
            const apiTestForm = document.getElementById('api-test-form');
            const apiStatusMsg = document.getElementById('api-status-msg');
            const testSendBtn = document.getElementById('test-send-btn');

            if (apiTestForm && apiStatusMsg && testSendBtn) {
                apiTestForm.addEventListener('submit', (e) => {
                    e.preventDefault();

                    // Start simulation
                    testSendBtn.disabled = true;
                    testSendBtn.innerHTML = '<i class="fa-solid fa-spinner animate-spin"></i> Göndərilir...';
                    apiStatusMsg.classList.add('hidden');
                    apiStatusMsg.classList.remove('flex');

                    setTimeout(() => {
                        testSendBtn.disabled = false;
                        testSendBtn.innerHTML = 'Mesajı Göndər <i class="fa-solid fa-bolt text-accent ml-2"></i>';

                        apiStatusMsg.classList.remove('hidden');
                        apiStatusMsg.classList.add('flex');

                        apiTestForm.reset();

                        // Hide success message after 5 seconds
                        setTimeout(() => {
                            apiStatusMsg.classList.add('hidden');
                            apiStatusMsg.classList.remove('flex');
                        }, 5000);
                    }, 1500);
                });
            }
        });
    </script>
